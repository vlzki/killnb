
<h1 class="text-center">Please choose your hitman:</h1>

<div class="container">
  <div class="row">
    <% @assets.each do |asset| %>
    <div class="col-sm-3">
      <div class="avatar">
        <div class="card text-center">
          <% asset.picture %>
          <div class="card-header" style="background-image: url('<%= cl_image_path asset.picture.path %>')">          <%= link_to asset.picture, asset_path(asset) %></div>
            <div class="card-body">
            <ul>
              <li>Username:<%= asset.username %></li>
              <li>City:<%= asset.city %></li>
              <li>Weapons:<%= asset.weapons %></li>
              <li>XP:<%= asset.xp_level %></li>
              <li>Kills:<%= asset.number_of_kills %></li>
              <li>Description:<%= asset.profile_description %></li>
              </div>
             </ul> 
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
